---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
import Comments from "@/components/Comments.astro";

type Props = CollectionEntry<"blog">["data"] & {
  slug?: string;
  imageCenter?: boolean;
};

const {
  title,
  description,
  pubDate,
  heroImage,
  slug,
  includeComments = true,
  comments,
  imageCenter = true,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      /* Add these styles to your CSS */
      :global(.full-bleed) {
        width: 100vw;
        margin-left: 50%;
        transform: translateX(-50%);
        position: relative;
      }

      :global(.full-bleed) > * {
        margin-left: auto;
        margin-right: auto;
        max-width: 1000px;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
      }

      @media (min-width: 1024px) {
        :global(.full-bleed) > * {
          padding-left: 2rem;
          padding-right: 2rem;
        }
      }
    </style>
  </head>
  <body class="bg-background min-h-screen flex flex-col">
    <div class="relative bg-background min-h-screen flex flex-col" id="header">
      <div class="z-20 sticky top-0 transition-all" id="header">
        <Header transparent />
      </div>
      <div class="relative h-96">
        <Image
          loading={"eager"}
          src={heroImage}
          alt=""
          transition:name={`hero-${slug}`}
          class={`w-full h-full object-cover ${imageCenter ? "object-center" : "object-bottom"}`}
        />
      </div>

      <div
        class="flex-1 max-w-4xl mx-auto bg-background py-12 px-12 lg:px-24 -mt-32 relative z-10"
      >
        <h2 class="mt-4 uppercase tracking-widest text-xs text-accent">
          {pubDate && <FormattedDate date={pubDate} />}
        </h2>
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-black tracking-tighter text-left uppercase"
        >
          {title}
        </h1>
        <div class="prose prose-sm sm:prose lg:prose-lg mt-6 text-foreground">
          <slot />
        </div>
        {
          includeComments && (
            <hr class="mb-10 max-w-[60ch] m-auto" />
            <Comments
            post={title}
            comments={comments}
            doneText="Comment sent!"
            />
          )
        }
      </div>

      <Footer />
    </div>
  </body>
</html>
